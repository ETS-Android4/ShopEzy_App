<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    style="@style/card_theme"
    android:layout_marginStart="4dp"
    android:layout_marginTop="4dp"
    android:layout_marginEnd="4dp"
    android:layout_marginBottom="4dp"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/item_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="16dp"
            android:text="Integral Calculus Maths"
            android:textSize="12sp"
            app:layout_constraintBottom_toTopOf="@+id/cp_text"
            app:layout_constraintEnd_toStartOf="@+id/date_text"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/cp_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Cost Price: $54"
            app:layout_constraintBottom_toTopOf="@+id/profit_text"
            app:layout_constraintStart_toStartOf="@+id/item_name"
            app:layout_constraintTop_toBottomOf="@+id/item_name" />

        <TextView
            android:id="@+id/profit_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Profit : $5"
            app:layout_constraintBottom_toTopOf="@+id/sp_text"
            app:layout_constraintStart_toStartOf="@+id/item_name"
            app:layout_constraintTop_toBottomOf="@+id/cp_text" />

        <TextView
            android:id="@+id/sp_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Selling Price : $59"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/item_name"
            app:layout_constraintTop_toBottomOf="@+id/profit_text" />

        <TextView
            android:id="@+id/date_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="7th oct : 5:30"
            android:textSize="12sp"
            app:layout_constraintBottom_toTopOf="@+id/mrp_text"
            app:layout_constraintEnd_toStartOf="@+id/fvrt_icon"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/item_name"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/mrp_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="MRP : $59"
            app:layout_constraintBottom_toTopOf="@+id/off_text"
            app:layout_constraintEnd_toEndOf="@+id/date_text"
            app:layout_constraintTop_toBottomOf="@+id/date_text" />

        <TextView
            android:id="@+id/off_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Off% : 0"
            app:layout_constraintBottom_toTopOf="@+id/quantity_text"
            app:layout_constraintEnd_toEndOf="@+id/date_text"
            app:layout_constraintTop_toBottomOf="@+id/mrp_text" />

        <TextView
            android:id="@+id/quantity_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quantity : 10"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/date_text"
            app:layout_constraintTop_toBottomOf="@+id/off_text" />

        <ImageView
            android:id="@+id/fvrt_icon"
            style="@style/bwicon_theme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/date_text"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/star_invoice" />
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>